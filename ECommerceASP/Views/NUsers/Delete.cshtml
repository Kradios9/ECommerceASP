@model NUser
@{
    ViewData["Title"] = "Delete";
}


<form method="post" asp-action="DeleteUser">

    <input asp-for="ID" hidden />

    <div class="p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete User</h2>
        </div>
    </div> 

    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" disabled class="form-control" /> 
        </br>

        <label asp-for="Email"></label>
        <input asp-for="Email" disabled class="form-control" /> 
        </br>

        <label asp-for="Price"></label>
        <input asp-for="Price" disabled class="form-control text-white" /> 
        </br>


        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-action="Index" asp-controller="NUsers" class="btn btn-secondary" style="width:150px">Back to Users</a>
    </div>

</form> 